<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <EditText
            android:id="@+id/edtNom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/rect_round_corner_white_light_gray_boader"
            android:hint="Nom"/>
    <EditText
            android:id="@+id/edtPren"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/rect_round_corner_white_light_gray_boader"
            android:layout_marginTop="20dp"
            android:hint="Prenom"/>
    <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/rect_round_corner_white_light_gray_boader"
            android:layout_marginTop="20dp"
            android:hint="Email"/>
    <EditText
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="phone"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/rect_round_corner_white_light_gray_boader"
            android:layout_marginTop="10dp"
            android:hint="Telephone"/>
    <EditText
            android:id="@+id/edtPsw"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/rect_round_corner_white_light_gray_boader"
            android:layout_marginTop="20dp"
            android:hint="Mot de passe"/>
    <EditText
            android:id="@+id/edtCpsw"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:inputType="textPassword"
            android:background="@drawable/rect_round_corner_white_light_gray_boader"
            android:layout_marginTop="20dp"
            android:hint="Confirmer Mot de passe"/>

    <Button
            android:id="@+id/btn_inscri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_gray_white_border"
            android:text="S'inscrire"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:textColor="@android:color/white"
            android:textSize="16sp" />


</LinearLayout>