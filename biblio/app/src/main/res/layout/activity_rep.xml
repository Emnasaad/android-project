<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/event_back">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/event_back">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_back"/>
        <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:layout_centerInParent="true"
                android:text="Ajouter un livre"/>
    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
        <TextView
                android:id="@+id/tv_quest1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@android:color/holo_red_light"/>
        <EditText
                android:id="@+id/text_input_rep1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Réponse"
                android:background="@drawable/rect_round_corner_white_light_gray_boader"
                android:inputType="textEmailAddress"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/colorIcons" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
        <TextView
                android:id="@+id/tv_quest2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@android:color/holo_red_light"/>

        <EditText
                android:id="@+id/text_input_rep2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Réponse"
                android:background="@drawable/rect_round_corner_white_light_gray_boader"
                android:inputType="textEmailAddress"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/colorIcons" />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
        <TextView
                android:id="@+id/tv_quest3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@android:color/holo_red_light"/>
        <EditText
                android:id="@+id/text_input_rep3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Réponse"
                android:background="@drawable/rect_round_corner_white_light_gray_boader"
                android:inputType="textEmailAddress"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/colorIcons" />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
        <TextView
                android:id="@+id/tv_quest4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@android:color/holo_red_light"/>
        <EditText
                android:id="@+id/text_input_rep4"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Réponse"
                android:background="@drawable/rect_round_corner_white_light_gray_boader"
                android:inputType="textEmailAddress"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/colorIcons" />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
        <TextView
                android:id="@+id/tv_quest5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@android:color/holo_red_light"/>
        <EditText
                android:id="@+id/text_input_rep5"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Réponse"
                android:background="@drawable/rect_round_corner_white_light_gray_boader"
                android:inputType="textEmailAddress"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/colorIcons" />
    </LinearLayout>
    <Button
            android:id="@+id/btnTerminer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_black_white_border"
            android:text="Terminer"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

</LinearLayout>
</ScrollView>


